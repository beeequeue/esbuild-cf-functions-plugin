{
  extends: [
    "config:js-app",
    "helpers:disableTypesNodeMajor",
    "group:allNonMajor",
    "schedule:monthly"
  ],
  prHourlyLimit: 5,
  prConcurrentLimit: 5,
  branchConcurrentLimit: 5,
  labels: ["dependencies"],
  baseBranches: ["main"],
  packageRules: [
    {
      matchUpdateTypes: ["patch", "minor"],
      matchManagers: ["npm"],
      automerge: true,
    },
    {
      packagePatterns: ["lint", "!lint-staged"],
      groupName: "Linting",
    },
    {
      matchManagers: ["terraform", "terraform-version"],
      groupName: "Terraform",
    },
  ],
}
